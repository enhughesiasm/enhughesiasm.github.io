---
import BaseLayout from '../layouts/BaseLayout.astro';

const mayBeArticle = Astro.url.pathname.includes('articles') !== true;
---

{
	// old links to walkingoncustard.com/article-slug should still work
	mayBeArticle && (
		<meta
			http-equiv='refresh'
			content={`0;url=${import.meta.env.BASE_URL}articles${
				Astro.url.pathname
			}`}
		/>
	)
}

<BaseLayout title='404 - walking on custard'>
	<div class='flex h-full w-full items-center justify-center py-32'>
		<div class='border-r-8 border-r-zinc-700 px-12 text-6xl'>404</div>
		<div class='pl-6 text-3xl'>Not Found</div>
	</div>
